    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "API/UI: yarn dev",
            "command": "yarn dev",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "API: yarn dev server",
            "command": "yarn server",
        },
        {
            "type": "shell",
            "label": "Docker: Mongo",
            "command": "docker run --name ynab -d mongo:latest",
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "Docker: Mongo-Express",
            "command": "docker run --link ynab:mongo -p 8081:8081 mongo-express",
            "problemMatcher": []
        },
    ]
}